{
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "api-platform/core": "^3.2",
        "doctrine/dbal": "^3",
        "doctrine/doctrine-bundle": "^2.12",
        "doctrine/doctrine-migrations-bundle": "^3.3",
        "doctrine/orm": "^3.1",
        "jdenticon/jdenticon": "^1.0",
        "lexik/jwt-authentication-bundle": "^3.0",
        "nelmio/cors-bundle": "^2.4",
        "phpdocumentor/reflection-docblock": "^5.4",
        "phpstan/phpdoc-parser": "^1.29",
        "symfony/asset": "7.0.*",
        "symfony/asset-mapper": "7.0.*",
        "symfony/console": "7.0.*",
        "symfony/dotenv": "7.0.*",
        "symfony/expression-language": "7.0.*",
        "symfony/flex": "^2",
        "symfony/framework-bundle": "7.0.*",
        "symfony/property-access": "7.0.*",
        "symfony/property-info": "7.0.*",
        "symfony/runtime": "7.0.*",
        "symfony/security-bundle": "7.0.*",
        "symfony/serializer": "7.0.*",
        "symfony/twig-bundle": "7.0.*",
        "symfony/validator": "7.0.*",
        "symfony/yaml": "7.0.*",
        "twig/extra-bundle": "^2.12|^3.0",
        "twig/twig": "^2.12|^3.0"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "importmap:install": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "symfony serve"
        ],
        "test:cs": [
            "Composer\\Config::disableProcessTimeout",
            "php vendor/bin/php-cs-fixer fix --dry-run --diff"
        ],
        "fix:cs" : [
            "Composer\\Config::disableProcessTimeout",
            "php vendor/bin/php-cs-fixer fix"
        ],
        "test:codeception": [
            "php vendor/bin/codecept clean",
            "APP_ENV=test bin/console doctrine:database:drop --force",
            "APP_ENV=test bin/console doctrine:database:create",
            "APP_ENV=test bin/console doctrine:schema:create --quiet",
            "php vendor/bin/codecept run --no-artifacts"
        ],
        "test": [
            "@test:cs",
            "@test:codeception"
        ],
        "db": [
            "php bin/console doctrine:database:drop --force --if-exists",
            "php bin/console doctrine:database:create",
            "php bin/console doctrine:migrations:migrate --no-interaction",
            "php bin/console doctrine:fixtures:load --no-interaction"
        ]
    },
    "scripts-descriptions": {
        "start": "Run local server",
        "test:cs": "Show PHP CS Fixer errors",
        "fix:cs": "Resolve PHP CS Fixer errors",
        "test:codeception": "Run Codeception tests",
        "test": "Run all tests (CS Fixer + Codeception)",
        "db": "Recreate database and load fixtures"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.0.*"
        }
    },
    "require-dev": {
        "codeception/codeception": "^5.1",
        "codeception/module-asserts": "^3.0",
        "codeception/module-doctrine2": "^3.0",
        "codeception/module-rest": "^3.3",
        "codeception/module-symfony": "^3.3",
        "doctrine/doctrine-fixtures-bundle": "^3.6",
        "friendsofphp/php-cs-fixer": "^3.57",
        "symfony/maker-bundle": "^1.59",
        "zenstruck/foundry": "^1.37"
    }
}
